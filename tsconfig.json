{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "target": "es2020",
    "module": "commonjs",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "alwaysStrict": true,
    "strict": true,
    "removeComments": true,

    "noUnusedLocals": false, // also should be true for production build
    "noImplicitAny": false, // ideally we should set this to true, but fixing the errors increase dev load so post launch we should fix this
    "noImplicitThis": false,
    "noImplicitOverride": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,

    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./**/*", "**/.eslintrc.js"],
  "exclude": ["node_modules", "dist", "docs", "../example"]
}
